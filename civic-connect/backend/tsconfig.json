{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",          // ✅ Node-friendly
    "esModuleInterop": true,       // ✅ Allows default imports
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
